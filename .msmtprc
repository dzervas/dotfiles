# Set default values for all following accounts.
defaults
tls		on
tls_starttls	on
tls_trust_file	/etc/ssl/certs/ca-certificates.crt
logfile		~/.msmtp.log

# Main account
account		dzervas
auth		on

host		dzervas.gr
port		587
user		dzervas
passwordeval    "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.offlineimap/dzervas.gpg"

from		dzervas@dzervas.gr

# Set a default account
account default : dzervas
