# Server settings
set from		= "dzervas@dzervas.gr"
set realname		= "Dimitris Zervas"

# Mailboxes
set beep_new
set editor		= "vim"
set mbox_type		= "Maildir"
set folder		= $HOME/.maildir/dzervas
set spoolfile		= "+INBOX"
set charset		= "utf8"

# Connection settings
set sleep_time		= 0

# Dirs and paths
set header_cache	= ~/.mutt/cache/headers
set mailcap_path	= ~/.mutt/mailcap

# Mail sorting
set sort		= "threads"
set sort_aux		= "reverse-last-date-received"
set auto_tag		= yes

# HTML handling
auto_view text/html
alternative_order text/plain text/enriched text/html
#macro attach 'V' "<pipe-entry>cat >~/.cache/mutt/mail.html && firefox ~/.cache/mutt/mail.html && shred -uzn 2 ~/.cache/mutt/mail.html<enter>"
set pager_stop

# Coloring
source ~/.mutt/monokai.colors

# PGP
set pgp_use_gpg_agent = yes
set pgp_timeout = 3600
set crypt_replyencrypt = yes
set pgp_sign_as = 47C9CA96
#source ~/.mutt/gpg.rc

# Bindings
bind pager q exit
bind pager <Up> previous-line
bind pager <Down> next-line
# bind pager ^<space> previous-page
