[alias]
	aa = !git add -A && git status
	ac = !git aa && git commit
	acp = !git ac && git push
	c = !git clone
	cd = !git clone $2 && cd $(basename "$2")
	co = !git checkout
[color]
	ui = auto
[commit]
	gpgsign = true
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
[push]
	default = simple
