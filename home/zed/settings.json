{
	"vim_mode": true,

	// Theme
	"buffer_font_family": "Iosevka Nerd Font",
	"buffer_font_size": 18,
	"icon_theme": "Colored Zed Icons Theme Dark",
	"theme": "VSCode Dark Modern",

	// Languages
	"format_on_save": "on",
	"hard_tabs": true,
	"load_direnv": "shell_hook",

	"file_types": {
		"shellscript": [".envrc"]
	},
	"languages": {
		"Python": {
			"language_servers": ["ty", "!basedpyright"]
		},
		"Rust": {
			"format_on_save": "off",
			"preferred_line_length": 100
		}
	},
	"lsp": {
		"rust-analyzer": {
			"initialization_options": {
				"rust": {
					// Use `target/rust-analyzer` to avoid blocking
					"analyzerTargetDir": true
				}
			}
		}
	},
	"private_files": [".envrc", ".env", ".direnv"],

	// Diagnostics
	"auto_signature_help": true,
	"show_signature_help_after_edits": true,
	"diagnostics": {
		"inline": {
			"enabled": true
		}
	},
	"inlay_hints": {
		"enabled": true,
		"show_parameter_hints": false,
		"show_type_hints": false,
		"show_value_hints": true
	},

	// Disable stuff
	"calls": {
		"mute_on_join": true
	},
	"collaboration_panel": {
		"button": false
	},
	"git": {
		"inline_blame": {
			"enabled": false
		}
	},
	"git_panel": {
		"button": false
	},

	// AI
	"agent": {
		"always_allow_tool_actions": true,
		"model_parameters": []
	},
	"features": {
		"edit_prediction_provider": "supermaven"
	},
	"language_models": {
		"lmstudio": {
			"available_models": [
				{
					"display_name": "Granite 4H Tiny",
					"max_tokens": 16384,
					"name": "ibm/granite-4-h-tiny",
					"supports_images": false,
					"supports_tool_calls": true
				}
			]
		},
		"openai_compatible": {
			"Z.AI": {
				"api_url": "https://api.z.ai/api/coding/paas/v4",
				"available_models": [
					{
						"capabilities": {
							"images": true,
							"parallel_tool_calls": true,
							"prompt_cache_key": true,
							"tools": true
						},
						"display_name": "GLM 4.6",
						"max_output_tokens": 128000,
						"max_tokens": 204800,
						"name": "GLM-4.6"
					},
					{
						"display_name": "GLM 4.5 Air",
						"max_tokens": 204800,
						"name": "GLM-4.5-Air"
					}
				]
			}
		}
	},

	// Extensions
	"auto_install_extensions": {
		// Theme
		"vscode-dark-modern": true,
		"colored-zed-icons-theme": true,

		// Languages
		"astro": true,
		"basher": true,
		"comment": true,
		"dockerfile": true,
		"fish": true,
		"github-actions": true,
		"html": true,
		"hurl": true,
		"jsonnet": true,
		"nix": true,
		"sql": true,
		"svelte": true,
		"tombi": true,
		"toml": true,
		"tree-sitter-query": true,

		// Snippets
		"html-snippets": true,
		"javascript-snippets": true,
		"python-snippets": true,
		"rust-snippets": true,
		"svelte-snippets": true,
		"typescript-snippets": true,

		// Debugging
		"probe-rs": true,

		// MCP
		// "kagimcp": true,
		// "mcp-server-github": true,
		// "svelte-mcp": true,
		"mcp-server-sequential-thinking": true,

		// ACP
		"opencode": true,

		"discord-presence": true
	},

	// UI & Behavior
	"auto_update": false,
	"autoscroll_on_clicks": true,
	"base_keymap": "VSCode",
	"buffer_line_height": "standard",
	"close_on_file_delete": true,
	"double_click_in_multibuffer": "open",
	"expand_excerpt_lines": 3,
	"gutter": {
		"min_line_number_digits": 2
	},
	"hover_popover_enabled": true,
	"indent_guides": {
		"coloring": "indent_aware"
	},
	"minimap": {
		"show": "auto"
	},
	"preferred_line_length": 100,
	"relative_line_numbers": true,
	"search": {
		"regex": true
	},
	"tabs": {
		"file_icons": true,
		"show_diagnostics": "errors"
	},
	"title_bar": {
		"show_branch_icon": true
	},
	"use_smartcase_search": true,
	"wrap_guides": [100]
}
