set surround           " vim-surround emulation
set multiple-cursors   " Support multiple cursors

set clipboard+=unnamed " Yank buffer shared with system clipboard
set hlsearch           " Highlight search maches
set incsearch          " Show search matches as you type
set noerrorbells       " I want nothing to annoy me
set number             " Show current line number in current line
set relativenumber     " Show relative line numbers
set smartcase          " Do not ignore case when pattern is uppercase

" IdeaVim only
set ideastatusicon gray " Do not show vim icon in IDEA statusbar

let mapleader=" "

inoremap <c-l> :nohlsearch<CR>
inoremap <c-up> :action MoveLineUp<CR>
inoremap <c-down> :action MoveLineDown<CR>
inoremap <a-c> :close<CR>
inoremap <a-left> :action PreviousTab<CR>
inoremap <a-right> :action NextTab<CR>
inoremap <a-return> :vsp<CR>
inoremap <a-s-return> :sp<CR>
inoremap <a-tab> <C-W><C-W>
inoremap <a-up> <C-W>l
inoremap <a-down> <C-W>h
inoremap <a-f> <C-W>o

nnoremap <c-l> :nohlsearch<CR>
